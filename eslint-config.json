{
  "eslintConfig": {
    "extends": ["prettier"],
    "plugins": ["tsx-a11y"],
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["src"]
        }
      }
    }
  },
  "rules": {
    "additional-rule": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.ts?(x)"],
      "rules": {
        "additional-typescript-only-rule": "warn"
      }
    }
  ]
}
